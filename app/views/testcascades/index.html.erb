<div class="container">
	<h1>Test the HAAR CLASSIFIER</h1>
	<br>
	<div class="row">
		<div class="col-md-6">
			<%= simple_form_for :test , :url => '/upload_photo', :multipart => true, :class => "box" , :html => { :enctype => "multipart/form-data" } do  |f| %>
				<div class="form-group">
			    	<%= f.file_field "datafile", :accept => "image/*", :class => "form-control required" %>
			    </div>
			    <div class="form-group">
			    	<%= f.input "classifier" , :collection => @classifier , :include_blank => false %>
			    </div>
			    <%= submit_tag "Upload" %>
			<% end %>
		</div>
		<div class="col-md-6">
			<% unless @image_link.nil? %>
				<img   width="500" src="<%= @image_link %>">
			<% end %>
		</div>
	</div>

</div>
